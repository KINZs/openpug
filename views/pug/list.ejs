<div class="container">
	<table class="table table-striped table-condensed">
		<tr>
			<th>Game</th>
			<th>State</th>
			<th>Map</th>
			<th>Players</th>
		</tr>
		<% pugs.forEach(function(pug) { %>
			<tr>
				<td><% if (pug.game == 'csgo') { %>
						Counter-Strike: Global Offensive
					<%} else if (pug.game == 'tf2'){%>
						Team Fortress 2
					<%}%>
				</td>
				<td><%= pug.state %></td>
				<td><%= pug.map %></td>
				<td><%= pug.currentplayers %>/<%= pug.maxplayers %><button type="button" class="btn btn-success" onclick="document.location = '/pug/view?p=<%= pug.id %>'">Join</button></td>
			</tr>
		<% }); %> 
	</table>
</div>
